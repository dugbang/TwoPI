<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/addLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ipAddress"
        android:layout_alignBottom="@+id/ipAddress"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:text="IP Address"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/ipAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/addLabel"
        android:ems="10"
        android:inputType="text|textPersonName|number"
        android:textSize="22dp"
        android:text="192.168.0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ipAddress"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textSize="20dp"
        android:text="output" />

</RelativeLayout>
